{{extend 'layout.html'}}
<h1>Quest {{=quest.title}} {{=result_msg}}</h1>
<body>  
    {{if success:}}
    You earned {{=quest.gold}} Gold! <br>
    {{if quest.loot_items:}}
    <ul>
        {{for loot in quest.loot_items:}}
        {{=LI('Found: ' + db.equip_items(loot).name) + ' (not really...)'}}
        {{pass}}
    </ul>
    {{pass}}
</body>
{{pass}}
<br>
{{=A('Continue', _href=URL("index", args=quest.id))}}
